      input.rate-button__star(name='rating_2' value='3' aria-label='Нормально' type='radio')
      input.rate-button__star(name='rating_2' value='4' aria-label='Хорошо' type='radio')
      input.rate-button__star(name='rating_2' value='5' aria-label='Супер' type='radio' checked)
